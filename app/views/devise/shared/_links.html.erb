<%- if controller_name != 'sessions' %>
  <p class="shared-link"><%= link_to "ログイン", new_session_path(resource_name), class: "btn-login"  %></p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="shared-link"><%= link_to "ユーザー登録", new_registration_path(resource_name), class: "btn-registrations" %></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="shared-link"><%= link_to "パスワードの再発行", new_password_path(resource_name), class: "btn-password" %></p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="shared-link"><%= link_to "確認メールの再送信", new_confirmation_path(resource_name), class: "btn-confirmation" %></p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="shared-link"><%= link_to "アカウント凍結解除メールの再送信", new_unlock_path(resource_name), class: "btn-unlock" %></p>
<% end -%>
