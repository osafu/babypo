<h1>ログイン</h1>

<div class="form-content form-content-main">
  <div class="form-content-in">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "field-label" do %>
    <p class="icon-text"><i class="material-icons">mail_outline</i><em>メールアドレス</em></p>
    <% end %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "field-label" do %>
    <p class="icon-text"><i class="material-icons">lock_outline</i><em>パスワード</em></p>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field field-remember_me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn-strong-m" %>
  </div>

  <div class="provider-login">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), class: "btn-provider btn-provider-#{provider}" %>
      <% end -%>
    <% end -%>
  </div>

<% end %>

</div>
</div>

<div class="form-content form-content-sub">
  <div class="form-content-in">

<%= render "devise/shared/links" %>

</div>
</div>
