<h1>会員登録</h1>

<div class="form-content form-content-main">
  <div class="form-content-in">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "field-label" do %>
    <p class="icon-text"><i class="material-icons">mail_outline</i><em>メールアドレス</em></p>
    <% end %>
    <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, class: "field-label" do %>
    <p class="icon-text"><i class="material-icons">person</i><em>お名前</em></p>
    <% end %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "field-label" do %>
      <p class="icon-text"><i class="material-icons">lock_outline</i><em>パスワード</em>
        <% if @minimum_password_length %>
          <span>※最低<%= @minimum_password_length %>文字以上</span>
        <% end %>
      </p>

    <% end %>

    <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "field-label" do %>
    <p class="icon-text"><i class="material-icons">lock_outline</i><em>パスワード(確認用)</em></p>
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録", class: "btn-strong-m" %>
  </div>
<% end %>
</div>
</div>

<div class="form-content form-content-sub">
  <div class="form-content-in">

<%= render "devise/shared/links" %>

</div>
</div>
